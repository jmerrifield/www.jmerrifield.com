!!! 5
block vars
  - var bodyClass = 'index'

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(
        http-equiv='X-UA-Compatible'
        content='IE=edge,chrome=1'
      )
      meta(name='viewport', content='width=device-width')

      title
        block title
          = locals.name

      link(rel='author', href='http://www.jmerrifield.com')
      link(
        rel='alternate'
        href=locals.url + '/feed.xml'
        type='application/rss+xml'
        title=locals.description
      )
      link(
        rel='stylesheet'
        href='/css/reset.css'
      )
      link(
        rel='stylesheet'
        href='/css/main.css'
      )

      script.
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', '#{locals.ga_key}']);
        _gaq.push(['_trackPageview']);

  body(class=bodyClass)
    header#header
      span.tagline= locals.description

    div#content
      block content

    footer
      p footer
